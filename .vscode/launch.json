  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach Node.js",
      "type": "node",
      "request": "attach",
      "protocol": "inspector",
      "port": 9223,
      "restart": true,
      "timeout": 10000
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Docker: Attach to Node",
      "port": 7001,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "/app/*": "${workspaceRoot}/*"
      },
      "remoteRoot": "/app/"
    }
  ]
}